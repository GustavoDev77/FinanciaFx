<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefWidth="677.0" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.financiai.JavaFxController.ControllerPage">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Título -->
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Simulador de JOKIBA" />

    <!-- Grid para os Campos de Entrada -->
    <GridPane hgap="10" vgap="10">
        <Label text="Nome do Cliente:" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />
        <TextField fx:id="nomeClienteField" promptText="Digite o nome" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Renda Mensal:" GridPane.columnIndex="2" />
        <TextField fx:id="rendaClienteField" promptText="Digite a renda" GridPane.columnIndex="2" GridPane.rowIndex="2" />

        <Label text="Prazo (meses):" GridPane.columnIndex="3" />
        <TextField fx:id="prazoField" promptText="Digite o prazo" GridPane.columnIndex="3" GridPane.rowIndex="2" />

        <Label text="Valor do Financiamento:" GridPane.columnIndex="4" />
        <TextField fx:id="valorFinanciamentoField" promptText="Digite o valor" GridPane.columnIndex="4" GridPane.rowIndex="2" />

      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <!-- Botão para Calcular -->
    <HBox spacing="10">
        <Button onAction="#calcularFinanciamento" style="-fx-font-size: 14px;" text="Calcular Financiamento" />
    </HBox>

    <!-- Exibição dos Resultados -->
    <Label fx:id="resultadoLabel" style="-fx-font-size: 16px; -fx-text-fill: green;" text="Resultado aparecerá aqui" />

    <!-- Tabela de Parcelas -->
    <TextArea fx:id="tabelaParcelasArea" editable="false" prefRowCount="10" prefWidth="400" style="-fx-font-family: 'Courier New'; -fx-font-size: 12px;" wrapText="true" />
</VBox>
