<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<?import javafx.scene.image.ImageView?>
<?import java.net.URL?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" prefWidth="350.0" spacing="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.financiai.JavaFxController.ControllerPage">
    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Logotipo -->
    <fx:define>
        <Image fx:id="logoImageSource" url="@../css/logo.webp"/>
    </fx:define>

    <!-- Logotipo -->
    <ImageView fx:id="logoImage" fitWidth="100" fitHeight="100" preserveRatio="true" smooth="true" image="${logoImageSource}"/>

    <!-- Título -->
    <Label styleClass="titulo" text="Simulador de Financiamento" />

    <!-- Formulário para entrada de dados -->
    <GridPane hgap="15" vgap="15" alignment="CENTER">
        <Label text="Nome do Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nomeClienteField" promptText="Digite o nome" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="text-field"/>

        <Label text="CPF do Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="cpfClienteField" promptText="Digite o CPF" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="text-field"/>

        <Label text="Renda Mensal:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="rendaClienteField" promptText="Digite a renda" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="text-field"/>

        <Label text="Prazo (meses):" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="prazoField" promptText="Digite o prazo" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="text-field"/>

        <Label text="Valor do Imóvel:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="valorImovelField" promptText="Digite o valor do imóvel" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="text-field"/>

        <Label text="Valor de Entrada:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="valorEntradaField" promptText="Digite o valor de entrada" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="text-field"/>

        <Label text="Taxa de Juros (%):" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextField fx:id="taxaJurosField" promptText="Digite a taxa de juros" GridPane.columnIndex="1" GridPane.rowIndex="6" styleClass="text-field"/>

        <Label text="Tipo de Amortização:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <ChoiceBox fx:id="tipoFinanciamentoBox" GridPane.columnIndex="1" GridPane.rowIndex="7" styleClass="choice-box">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="SAC" />
                    <String fx:value="PRICE" />
                </FXCollections>
            </items>
        </ChoiceBox>

        <Label text="Tipo de Imóvel:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
        <ChoiceBox fx:id="tipoImovelBox" GridPane.columnIndex="1" GridPane.rowIndex="8" styleClass="choice-box">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="CASA" />
                    <String fx:value="APARTAMENTO" />
                </FXCollections>
            </items>
        </ChoiceBox>
    </GridPane>

    <!-- Botão de cálculo -->
    <HBox spacing="10" alignment="CENTER">
        <Button onAction="#calcularFinanciamento" text="Calcular" styleClass="botao" />
    </HBox>

    <!-- Exibição de resultados -->
    <Label fx:id="resultadoLabel" styleClass="resultado" text="Resultado aparecerá aqui" />

    <!-- Tabela de parcelas exibida após cálculo -->
    <TextArea fx:id="tabelaParcelasArea" editable="false" prefRowCount="10" wrapText="true" styleClass="text-area" />
</VBox>







